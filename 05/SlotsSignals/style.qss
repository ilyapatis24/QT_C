QWidget {
    max-width: 400px;
    max-height: 500px;
}

QLabel {
    font-size: 30px;
    text-transform: uppercase;
}

QTextBrowser {
    min-width: 250px;
    min-height: 250px;
    margin: 10px 20px;
}

QPushButton {
    font-size: 20px;
    background: #f73;
    color: white;
    text-decoration: none;
}

QLabel, QPushButton {
    font-family: "Times New Roman", serif;
    font-weight: bold;
}
